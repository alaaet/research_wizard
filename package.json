    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@tailwindcss/postcss": "^4.1.5",
    "@tailwindcss/typography": "^0.5.15",
    "@types/html-pdf": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.21",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "browserslist": "^4.24.5",
    "buffer-from": "^1.1.2",
    "caniuse-lite": "^1.0.30001716",
    "copyfiles": "^2.4.1",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4"
  },
  "build": {
    "appId": "com.researchwizard.app",
    "productName": "Research Wizard",
    "files": [
      "dist/**",
      "backend/dist/**",
      "main.cjs",
      "preload.js",
      "package.json",
      "assets/**",
      "!**/test{,s}/**",
      "!**/*.map",
      "!**/docs/**",
      "!**/examples/**",
      "!**/scripts/**",
      "!**/website/**",
      "!**/node_modules/phantomjs-prebuilt/**",
      "!**/node_modules/**/test{,s}/**",
      "!**/node_modules/**/docs/**",
      "!**/node_modules/**/examples/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "asar": true
  }
}
