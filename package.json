    "mammoth": "^1.9.1",
    "markdown-it": "^14.1.0",
    "next-themes": "^0.4.6",
    "openai": "^4.103.0",
    "papaparse": "^5.5.2",
    "pdf-parse": "^1.1.1",
    "react": "^19.1.0",
    "react-day-picker": "^9.6.7",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.1",
    "react-i18next": "^15.5.2",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.0",
    "react-router-dom": "^7.5.3",
    "recharts": "^2.15.3",
    "sonner": "^2.0.3",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.5.2",
