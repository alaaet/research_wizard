{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./backend/dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "backend/ai_client/**/*.ts",
    "backend/search_client/**/*.ts",
    "backend/utils/**/*.ts",
    "backend/database.d.ts",
    "backend/database.ts",
    "shared/**/*.ts"
  ]
}
